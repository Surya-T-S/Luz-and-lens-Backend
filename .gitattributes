# Normalize all text files to CRLF on commit
* text=auto eol=crlf

# Explicitly treat common code/text files as text
*.js    text eol=crlf
*.json  text eol=crlf
*.md    text eol=crlf
*.yml   text eol=crlf
*.yaml  text eol=crlf
*.html  text eol=crlf
*.css   text eol=crlf
*.ts    text eol=crlf
*.tsx   text eol=crlf
*.jsx   text eol=crlf
*.sh    text eol=crlf
*.bat   text eol=crlf

# Mark binary files so Git doesn't try to diff them
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.ico   binary
*.pdf   binary
*.zip   binary
*.gz    binary
*.tar   binary
*.mp4   binary
*.mp3   binary
*.mov   binary
*.avi   binary
*.exe   binary
*.dll   binary
*.so    binary
*.bin   binary

# Ensure license file uses CRLF line endings
LICENSE text eol=crlf

# Ensure .gitattributes file uses CRLF line endings
.gitattributes text eol=crlf
